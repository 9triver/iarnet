# IARNet Environment Configuration Template
# Copy this file to .env and modify the values as needed

# Server Configuration
IARNET_MODE=standalone
IARNET_LISTEN_ADDR=:8083
IARNET_PEER_LISTEN_ADDR=:50051

# Peer Discovery
IARNET_INITIAL_PEERS=peer2.example.com:50051,peer3.example.com:50051

# Resource Limits
IARNET_CPU_LIMIT=8
IARNET_MEMORY_LIMIT=16Gi
IARNET_GPU_LIMIT=4

# Workspace Configuration
IARNET_WORKSPACE_DIR=../workspaces

# Ignis Integration
IGNIS_MASTER_ADDRESS=localhost:50051

# Database Configuration (if applicable)
# IARNET_DB_HOST=localhost
# IARNET_DB_PORT=5432
# IARNET_DB_NAME=iarnet
# IARNET_DB_USER=iarnet
# IARNET_DB_PASSWORD=password

# Logging Configuration
IARNET_LOG_LEVEL=info
IARNET_LOG_FORMAT=json

# Security Configuration
# IARNET_TLS_CERT_FILE=/path/to/cert.pem
# IARNET_TLS_KEY_FILE=/path/to/key.pem
# IARNET_TLS_CA_FILE=/path/to/ca.pem

# Kubernetes Configuration (when running in k8s mode)
# IARNET_K8S_NAMESPACE=default
# IARNET_K8S_CONFIG_PATH=/path/to/kubeconfig

# Docker Configuration (when using Docker provider)
# IARNET_DOCKER_HOST=unix:///var/run/docker.sock
# IARNET_DOCKER_API_VERSION=1.41

# Monitoring and Metrics
# IARNET_METRICS_ENABLED=true
# IARNET_METRICS_PORT=9090
# IARNET_HEALTH_CHECK_INTERVAL=30s

# Development Configuration
# IARNET_DEBUG=false
# IARNET_PROFILE=false